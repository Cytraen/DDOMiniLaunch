<Window x:Class="MiniLaunch.WPFApp.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniLaunch.WPFApp"
        xmlns:settings="clr-namespace:MiniLaunch.WPFApp.Properties"
        mc:Ignorable="d"
        Title="DDO MiniLaunch Startup" Height="220" Width="330"
        Top="{Binding StartupTop, Source={x:Static settings:Settings.Default}, Mode=TwoWay}"
        Left="{Binding StartupLeft, Source={x:Static settings:Settings.Default}, Mode=TwoWay}"
        LocationChanged="Window_LocationChanged"
        ResizeMode="NoResize">
    <Border BorderThickness="3" BorderBrush="LightGray" Background="White">
        <TextBlock Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="22" Margin="5">
            Starting DDO MiniLaunch...
        </TextBlock>
    </Border>
</Window>